<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".ActivationActivity">

    <ImageView
        android:id="@+id/top_img_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/spacing_72"
        android:src="@drawable/yourlogo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <EditText
        android:id="@+id/activationkey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_16"
        android:layout_marginRight="@dimen/spacing_16"
        android:layout_marginTop="@dimen/spacing_8"
        android:background="@drawable/rounded_stroke_white_40"
        android:drawablePadding="@dimen/spacing_16"
        android:hint="@string/activation"
        android:inputType="text"
        android:maxLines="1"
        android:padding="@dimen/spacing_16"
        android:textColor="@android:color/white"
        android:textColorHint="@color/white_40"
        app:layout_constraintTop_toBottomOf="@id/top_img_logo" />

    <Button
        android:id="@+id/button_activation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_16"
        android:layout_marginRight="@dimen/spacing_16"
        android:layout_marginTop="@dimen/spacing_24"
        android:background="@drawable/activation_button"
        android:paddingBottom="@dimen/spacing_20"
        android:paddingLeft="@dimen/spacing_16"
        android:paddingRight="@dimen/spacing_16"
        android:paddingTop="@dimen/spacing_20"
        android:text="@string/lable_activation"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/activationkey" />




</android.support.constraint.ConstraintLayout>
